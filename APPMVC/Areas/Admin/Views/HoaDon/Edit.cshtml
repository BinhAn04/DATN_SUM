@model AppData.Model.HoaDonChiTiet

@{
    ViewData["Title"] = "Chỉnh Sửa Hóa Đơn Chi Tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; 
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Quản lý hóa đơn chi tiết /</span> Chỉnh sửa hóa đơn chi tiết
        </h4>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <input type="hidden" asp-for="IdHoaDonChiTiet" />

                            <div class="form-group mb-3">
                                <label asp-for="DonGia" class="control-label">Đơn Giá</label>
                                <input asp-for="DonGia" class="form-control" placeholder="Nhập đơn giá" />
                                <span asp-validation-for="DonGia" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="SoLuong" class="control-label">Số Lượng</label>
                                <input asp-for="SoLuong" class="form-control" placeholder="Nhập số lượng" />
                                <span asp-validation-for="SoLuong" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="TongTien" class="control-label">Tổng Tiền</label>
                                <input asp-for="TongTien" class="form-control" placeholder="Nhập tổng tiền" />
                                <span asp-validation-for="TongTien" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="KichHoat" class="control-label">Kích Hoạt</label>
                                <input asp-for="KichHoat" class="form-control" placeholder="Nhập trạng thái kích hoạt" />
                                <span asp-validation-for="KichHoat" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="IdHoaDon" class="control-label">Hóa Đơn</label>
                                <input asp-for="IdHoaDon" class="form-control" readonly />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="IdSanPhamChiTiet" class="control-label">Sản Phẩm Chi Tiết</label>
                                <input asp-for="IdSanPhamChiTiet" class="form-control" readonly />
                            </div>

                            <div class="form-group mb-3 d-flex justify-content-between">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


