@model AppData.Model.DiaChi

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DiaChi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ID Địa Chỉ (ẩn nếu không cần chỉnh sửa) -->
            <div class="form-group">
                <label asp-for="IdDiaChi" class="control-label"></label>
                <input asp-for="IdDiaChi" class="form-control" readonly />
                <span asp-validation-for="IdDiaChi" class="text-danger"></span>
            </div>

            <!-- Họ Tên -->
            <div class="form-group">
                <label asp-for="HoTen" class="control-label"></label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <!-- Số Điện Thoại -->
            <div class="form-group">
                <label asp-for="SoDienThoai" class="control-label"></label>
                <input asp-for="SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>

            <!-- Địa chỉ -->
            <div class="form-group">
                <label asp-for="Diachi" class="control-label"></label>
                <input asp-for="Diachi" class="form-control" />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>

            <!-- Địa chỉ mặc định (checkbox) -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DiaChiMacDinh" /> @Html.DisplayNameFor(model => model.DiaChiMacDinh)
                </label>
            </div>

            <!-- Ngày Tạo -->
            <div class="form-group">
                <label asp-for="NgayTao" class="control-label"></label>
                <input asp-for="NgayTao" class="form-control"  />
                <span asp-validation-for="NgayTao" class="text-danger"></span>
            </div>

            <!-- Ngày Cập Nhật -->
            <div class="form-group">
                <label asp-for="NgayCapNhat" class="control-label"></label>
                <input asp-for="NgayCapNhat" class="form-control"  />
                <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
            </div>

            <!-- Dropdown cho Khách Hàng -->
            <div class="form-group">
                <label asp-for="IdKhachHang" class="control-label"></label>
                <select asp-for="IdKhachHang" class="form-control" asp-items="@(new SelectList(ViewBag.KhachHang, "IdKhachHang", "HoTen"))"></select>
                <span asp-validation-for="IdKhachHang" class="text-danger"></span>
            </div>

            <!-- Nút Lưu -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
