@model IEnumerable<AppData.Model.DiaChi>

@{
    ViewData["Title"] = "GetAll";
}

<h1 class="text-center mb-4">Danh Sách Địa Chỉ</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo Mới</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th hidden>@Html.DisplayNameFor(model => model.IdDiaChi)</th>
            <th>Họ tên</th>
            <th>Số điện thoại</th>
            <th>Mô tả</th>
            <th>Tỉnh</th>
            <th>Quận</th>
            <th>Phường</th>
            <th>Địa chỉ mặc định</th>
            <th hidden>@Html.DisplayNameFor(model => model.IdKhachHang)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="10" class="text-center">Không có dữ liệu.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td hidden>@Html.DisplayFor(modelItem => item.IdDiaChi)</td>
                    <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
                    <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProvinceName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DistrictName)</td>
                    <td>@Html.DisplayFor(modelItem => item.WardName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiaChiMacDinh)</td>
                    <td hidden>@Html.DisplayFor(modelItem => item.IdKhachHang)</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="EditDC" asp-route-IdDiaChi="@item.IdDiaChi">Sửa</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-IdDiaChi="@item.IdDiaChi">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@* Ẩn các trường IdDiaChi và IdKhachHang *@
<input type="hidden" id="IdDiaChi" name="IdDiaChi" value="@Model.FirstOrDefault()?.IdDiaChi" />
<input type="hidden" id="IdKhachHang" name="IdKhachHang" value="@Model.FirstOrDefault()?.IdKhachHang" />

<style>
    /* Tùy chỉnh bảng để tạo vẻ sang trọng */
    table {
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }

    .table thead th {
        background-color: #343a40;
        color: white;
    }

    .table td, .table th {
        padding: 15px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-sm {
        margin-right: 5px;
    }
</style>
