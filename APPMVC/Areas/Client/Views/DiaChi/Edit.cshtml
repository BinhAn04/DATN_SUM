@model AppData.Model.DiaChi

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Client/Views/Shared/_Tttk.cshtml";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Quản lý địa chỉ /</span> Chỉnh sửa địa chỉ
        </h4>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <input type="hidden" asp-for="IdDiaChi" />

                            <div class="form-group mb-3">
                                <label asp-for="HoTen" class="control-label">Họ Tên</label>
                                <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="SoDienThoai" class="control-label">Số Điện Thoại</label>
                                <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Diachi" class="control-label">Địa chỉ</label>
                                <input asp-for="Diachi" class="form-control" placeholder="Nhập địa chỉ" />
                                <span asp-validation-for="Diachi" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3 form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="DiaChiMacDinh" />
                                    @Html.DisplayNameFor(model => model.DiaChiMacDinh)
                                </label>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="IdKhachHang" class="control-label">Khách Hàng</label>
                                <select asp-for="IdKhachHang" class="form-control" asp-items="@(new SelectList(ViewBag.KhachHang, "IdKhachHang", "HoTen"))"></select>
                                <span asp-validation-for="IdKhachHang" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3 d-flex justify-content-between">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>