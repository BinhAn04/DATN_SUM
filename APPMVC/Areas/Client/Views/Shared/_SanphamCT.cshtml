<!doctype html>
<html lang="en">
<style>

	.carousel-item img {
		height: 200px; /* Chiều cao cố định */
		object-fit: contain; /* Hiển thị toàn bộ ảnh mà không cắt */
		background-color: rgba(0, 0, 0, 0.1); /* Nền nhạt cho ảnh để nhìn tinh tế */
		border-radius: 10px; /* Bo góc nhẹ cho ảnh */
	}

	.carousel-control-prev-icon, .carousel-control-next-icon {
		background-color: rgba(255, 255, 255, 0.7); /* Nền sáng hơn cho nút điều khiển */
		border-radius: 50%; /* Bo tròn nút điều khiển */
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3); /* Hiệu ứng đổ bóng */
	}

	.hero {
		background: linear-gradient(135deg, #1a1a1a, #333333); /* Màu nền gradient sang trọng */
		color: #fff; /* Văn bản màu trắng */
		padding: 50px 0; /* Khoảng cách trên dưới */
	}

	.intro-excerpt h1 {
		font-size: 3rem; /* Kích thước chữ lớn hơn */
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Hiệu ứng bóng đổ */
	}
</style>
<head>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="author" content="Untree.co">
	<link rel="shortcut icon" href="favicon.png">

	<meta name="description" content="" />
	<meta name="keywords" content="bootstrap, bootstrap4" />

	<!-- Bootstrap CSS -->
	<link href="~/Client/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/Client/css/tiny-slider.css" rel="stylesheet">
	<link href="~/Client/css/style.css" rel="stylesheet">
</head>

<body>
	@Html.Partial("_Nav")

	<div class="hero bg-dark">
		<div class="container">
			<div class="row justify-content-between">
				<div class="col-lg-5">
					<div class="intro-excerpt">
						<h1 class="text-white">Shop</h1>
					</div>
				</div>
				<div class="col-lg-7">
					<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img src="~/Client/images/Shoes.png" class="d-block w-100" alt="Slide 1">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/giaymau1.png" class="d-block w-100" alt="Slide 2">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/giay1.png" class="d-block w-100" alt="Slide 3">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/mau2.png" class="d-block w-100" alt="Slide 4">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/mau3.png" class="d-block w-100" alt="Slide 5">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/mau4.png" class="d-block w-100" alt="Slide 6">
							</div>
						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Next</span>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Hero Section -->



	<div class="untree_co-section product-section before-footer-section">
		<div class="container">
			<div class="backbutton">
				<a href="@Url.Action("Index", "SanPham",new { area = "Client" })" class="btn btn-dark btn-xs">
					<img src="~/Client/images/chevron-left.jpg" alt="Back" style="filter: invert(1); width: 20px">Back to shop
				</a>
			</div>
			<div class="row">
				<div class="col-lg-12 mt-3">
					<div class="product-detail">
						<div class="row">
							@RenderBody()
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<script src="~/Client/js/bootstrap.bundle.min.js"></script>
	<script src="~/Client/js/tiny-slider.js"></script>
	<script src="~/Client/js/custom.js"></script>
</body>

</html>