@using AppData.Model;
<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="author" content="Untree.co">
	<link rel="shortcut icon" href="favicon.png">

	<meta name="description" content="" />
	<meta name="keywords" content="bootstrap, bootstrap4" />

	<!-- Bootstrap CSS -->
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
	<link href="css/tiny-slider.css" rel="stylesheet">
	<link href="css/style.css" rel="stylesheet">
	<title>SoleMate Store</title>
	<style>
		.sidebar {
			background-color: #f8f9fa;
			padding: 30px;
			border-radius: 10px;
			box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
		}

		.sidebar-block {
			margin-bottom: 30px;
			border-bottom: 1px solid #e9ecef;
			padding-bottom: 20px;
		}

		.sidebar-block:last-child {
			border-bottom: none;
			padding-bottom: 0;
		}

		.sidebar-title {
			font-size: 20px;
			margin-bottom: 20px;
			color: #007bff; /* Đổi màu chữ thành xanh dương */
			font-weight: 600;
			border-bottom: 2px solid #007bff; /* Thêm viền dưới cùng */
			display: inline-block; /* Đảm bảo viền chỉ bao quanh chữ */
		}

		.category-list li a {
			color: #555;
			padding: 8px 0;
			transition: all 0.3s ease;
		}

		.category-list li a:hover {
			color: #3b5d50;
			padding-left: 5px;
		}

		.count {
			background-color: #3b5d50;
			color: #fff;
			padding: 2px 8px;
			border-radius: 20px;
			font-size: 12px;
		}

		.color-filters {
			display: flex;
			flex-wrap: wrap;
			align-items: center; /* Center vertically */
		}

		.color-swatch {
			display: flex;
			align-items: center; /* Center vertically */
			justify-content: center; /* Center horizontally */
			border: 2px solid transparent; /* Default border */
			border-radius: 5px; /* Slightly round edges */
			padding: 5px; /* Padding around the swatch */
			margin: 5px; /* Spacing between color swatches */
			transition: border-color 0.3s ease; /* Smooth transition for border color */
		}

			.color-swatch:hover {
				border-color: #007bff; /* Change border color on hover */
			}

		.color-label {
			margin-left: 5px; /* Space between color swatch and label */
			white-space: nowrap; /* Prevent text wrapping */
			color: #333; /* Text color */
			font-weight: 500; /* Slightly bolder text */
		}

		.custom-control {
			margin-bottom: 10px;
		}

		.custom-control-label {
			color: #555;
			cursor: pointer;
		}

		.price-range-value {
			margin-top: 15px;
			font-weight: 600;
			color: #3b5d50;
		}

		.carousel-caption h1 {
			font-size: 3rem; 
			text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); 
		}

		.carousel-item img {
			height: 200px; /* Chiều cao cố định */
			object-fit: contain; /* Hiển thị toàn bộ ảnh mà không cắt */
			background-color: rgba(0, 0, 0, 0.1); /* Nền nhạt cho ảnh để nhìn tinh tế */
			border-radius: 10px; /* Bo góc nhẹ cho ảnh */
		}

		.carousel-control-prev-icon, .carousel-control-next-icon {
			background-color: rgba(255, 255, 255, 0.7); /* Nền sáng hơn cho nút điều khiển */
			border-radius: 50%; /* Bo tròn nút điều khiển */
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3); /* Hiệu ứng đổ bóng */
		}

		.hero {
			background: linear-gradient(135deg, #1a1a1a, #333333); /* Màu nền gradient sang trọng */
			color: #fff; /* Văn bản màu trắng */
			padding: 50px 0; /* Khoảng cách trên dưới */
		}
		.intro-excerpt h1 {
			font-size: 3rem; /* Kích thước chữ lớn hơn */
			text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Hiệu ứng bóng đổ */
		}

		.category-list a, .color-filters a {
			color: #007bff;
			text-decoration: none;
		}

			.category-list a:hover, .color-filters a:hover {
				text-decoration: underline;
			}

		.count {
			background-color: #007bff;
			color: white;
			border-radius: 12px;
			padding: 5px 10px;
			margin-left: 10px;
		}

		.size-button {
			margin: 5px;
			padding: 10px 15px;
			border: none;
			border-radius: 5px;
			background-color: #007bff;
			color: white;
			cursor: pointer;
		}

			.size-button:hover {
				background-color: #0056b3;
			}

	</style>
</head>

<body>

	@Html.Partial("_Nav")
	<div class="hero bg-dark">
		<div class="container">
			<div class="row justify-content-between">
				<div class="col-lg-5">
					<div class="intro-excerpt">
						<h1 class="text-white">Shop</h1>
					</div>
				</div>
				<div class="col-lg-7">
					<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img src="images/Shoes.png" class="d-block w-100" alt="Slide 1">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/giaymau1.png" class="d-block w-100" alt="Slide 2">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/giay1.png" class="d-block w-100" alt="Slide 3">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/mau2.png" class="d-block w-100" alt="Slide 4">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/mau3.png" class="d-block w-100" alt="Slide 5">
							</div>
							<div class="carousel-item">
								<img src="~/Client/img/mau4.png" class="d-block w-100" alt="Slide 6">
							</div>
						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Next</span>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Hero Section -->



	<div class="untree_co-section product-section before-footer-section">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 col-md-4 col-sm-12">
					<div class="sidebar">
						<div class="sidebar-block">
							<h3 class="sidebar-title">Categories</h3>
							<ul class="list-unstyled category-list" id="categoryList">
								@if (ViewData["Categories"] is List<DanhMuc> categories)
								{
									foreach (var category in categories)
									{
										<li>
											<a href="@Url.Action("Index", new { name = "", categoryId = category.IdDanhMuc })">@category.TenDanhMuc</a>
										</li>
									}
								}
								else
								{
									<li>No categories available.</li>
								}
							</ul>
						</div>
						<div class="sidebar-block">
							<h3 class="sidebar-title">Colors</h3>
							<ul class="list-unstyled color-filters" id="colorButtons">
								@if (ViewData["Colors"] is List<MauSac> colors)
								{
									foreach (var color in colors)
									{
										<li style="margin-right: 10px; margin-bottom: 10px;">
											<div class="color-swatch"
												 style="background-color: @color.TenMauSac;"
												 onclick="location.href='@Url.Action("Index", new { colorId = color.IdMauSac })'"
												 title="@color.TenMauSac">
												<span class="color-label">@color.TenMauSac</span>
											</div>
										</li>
									}
								}
								else
								{
									<li>No colors available.</li>
								}
							</ul>
						</div>
						<div class="sidebar-block">
							<h3 class="sidebar-title">Sizes</h3>
							<div class="size-buttons" id="sizeButtons">
								@if (ViewData["Sizes"] is List<KichCo> sizes)
								{
									foreach (var size in sizes)
									{
										<button class="size-button" data-size="@size.IdKichCo">@size.TenKichCo</button>
									}
								}
								else
								{
									<p>No sizes available.</p>
								}
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-9 col-md-8 col-sm-12" id="productsArea">
					@RenderBody()
				</div>
			</div>
		</div>
	</div>






	<script src="js/bootstrap.bundle.min.js"></script>
	<script src="js/tiny-slider.js"></script>
	<script src="js/custom.js"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
	<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

</body>

</html>
